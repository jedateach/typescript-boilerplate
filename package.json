{
  "name": "@jedateach/typescript-boilerplate",
  "version": "1.0.0",
  "description": "A best effort at a typescript library that supports browser-based demonstration, and tests, with code coverage",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/mycode.umd.js",
    "dev": "run-p dev:server dev:watch",
    "dev:server": "live-server --ignore=node_modules dist",
    "dev:watch": "onchange src/* -- npm run build",
    "build": "run-s build:compile bundle:umd copy",
    "copy": "copyfiles -f public/index.html dist/",
    "build:compile": "tsc --project .",
    "bundle:umd": "run-s bundle:lib:umd bundle:demo:umd bundle:tests:umd",
    "bundle:lib:umd": "rollup -c -f umd dist/esnext/src/mylib/index.js --name=mylib --file=dist/mylib.umd.js --sourcemap",
    "bundle:lib:cov:umd": "rollup -c -f umd dist/mylib_instrumented/index.js --name=mylib --file=dist/mylib.instrumented.umd.js --sourcemap",
    "bundle:demo:umd": "rollup -c -f umd dist/esnext/src/index.js --globals mylib:mylib --file=dist/demo.umd.js --sourcemap",
    "bundle:tests:umd": "rollup -c -f umd dist/esnext/tests/index.js --globals mylib:mylib --file=dist/tests.umd.js --sourcemap",
    "test": "run-s cov:instrument bundle:lib:cov:umd test:ci",
    "test:ci": "testem ci .",
    "test:server": "testem server .",
    "cov:instrument": "nyc instrument dist/esnext/src/mylib dist/mylib_instrumented",
    "cov:view": "nyc report && live-server coverage/lcov-report",
    "docs:build": "typedoc --tsconfig src",
    "docs:view": "live-server docs",
    "clean": "rm -Rf dist docs coverage tmp"
  },
  "keywords": [
    "typescript",
    "boilerplate",
    "tests",
    "coverage"
  ],
  "author": "Jeremy Shipman <jeremy@burnbright.net>",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "^3.5.11",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.3.1",
    "jasmine-core": "^3.5.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "rollup": "^2.18.1",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "testem": "^3.9.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.5"
  }
}
